@model Invoice.Admin.Models.ProductModel;
@{
    ViewBag.Title = "Facturación|Productos";
    Layout = "_Layout";
}
<div class="col-md-12">
    <h1>Productos</h1>
</div>
<hr/>
@if (Model.Option == "List")
{
    <div class="col-md-12">
        <div class="card">
            <div class="card-title">
                <h2>Listado de productos</h2>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th scope="col">Código</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Stock</th>
                            <th scope="col">Precio</th>
                            <th scope="col">Estado</th>
                            <th scope="col"></th>
                        </tr>
                        </thead>
                        <tbody>

                        @foreach (var product in @Model.InputProducts)
                        {
                            <tr>
                                <td>@product.Code</td>
                                <td>@product.Name</td>
                                <td>@product.Stock</td>
                                <td>@product.Price</td>
                                <td>
                                    @if (@product.Status)
                                    {
                                        @Html.Label("Activo")
                                        ;
                                    }
                                    else
                                    {
                                        @Html.Label("Inactivo")
                                        ;
                                    }
                                </td>
                                <td>
                                    <a asp-action="LoadProduct" asp-route-productId="@product.Id" class="btn btn-warning btn-sm text-white">
                                        <i class="fa fa-pencil-square-o"></i>
                                    </a>
                                </td>
                                <td>
                                    <a class="btn btn-danger btn-sm text-white">
                                        <i class="fa fa-trash-o"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                        </tbody>

                    </table>
                </div>
            </div>
            <div class="card-footer">

            </div>
        </div>
    </div>
}
@if (Model.Option == "Edit")
{
    <div class="col-md-12">
        <form method="post" asp-controller="Product" asp-action="Update">
            <div class="card">
                <div class="card-title">
                    <h2>Editar</h2>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="@Model.InputProductModel.Id"/>
                    @Html.HiddenFor(model => model.Option)
                    <div class="row">
                        <div class="col">
                            <input asp-for="InputProductModel.Name" class="form-control" placeholder="Nombre">
                            <span asp-validation-for="InputProductModel.Name" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <input asp-for="InputProductModel.Description" class="form-control" placeholder="Descripción">
                            <span asp-validation-for="InputProductModel.Description" class="text-danger"></span>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col">
                            <input asp-for="InputProductModel.Code" class="form-control" placeholder="Código">
                            <span asp-validation-for="InputProductModel.Code" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <input asp-for="InputProductModel.Price" class="form-control" placeholder="Precio">
                            <span asp-validation-for="InputProductModel.Price" class="text-danger"></span>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col">
                            <input asp-for="InputProductModel.Stock" class="form-control" placeholder="Stock">
                            <span asp-validation-for="InputProductModel.Stock" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a class="btn btn-outline-secondary btn-sm"><i class="fa fa-angle-left"></i> Volver</a>
                    <button class="btn btn-outline-success btn-sm" type="submit">Actualizar <i class="fa fa-save"></i></button>
                </div>
            </div>
        </form>
    </div>
}