@model Invoice.Admin.Models.UserDetailModel;
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<div class="col-md-12">
    <h1>Bienvenido @Model.Firsname</h1>

</div>
<hr/>
<div class="row row-cols-1 row-cols-md-3 g-4 text-center">
    <div class="col">
        <div class="card h-100">
            <div class="card-body">
                <i class="fa fa-opencart fa-4x text-warning"></i>
                <p class="card-text text-warning">@Model.ProductsTotal /<small>productos</small></p>
            </div>
            <div class="card-footer">
                <small class="text-muted">
                    <a class="btn btn-outline-warning btn-sm" href="../Product/Index?userId=@Model.UserId">Administrar Productos <i class="fa fa-eye"></i></a>
                </small>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100">
            <div class="card-body">
                <i class="fa fa-users fa-4x text-success"></i>
                <p class="card-text text-success">@Model.ClientsTotal /<small>clientes</small></p>
            </div>
            <div class="card-footer">
                <small class="text-muted">
                    <a class="btn btn-outline-success btn-sm" href="../Client/Index?userId=@Model.UserId">Administrar Clientes <i class="fa fa-eye"></i></a>
                </small>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100">
            <div class="card-body">
                <i class="fa fa-building fa-4x text-info"></i>
                <p class="card-text text-info">@Model.SubsidiariesTotal /<small>sucursales</small></p>
            </div>
            <div class="card-footer">
                <small class="text-muted">
                    <a class="btn btn-outline-info btn-sm" href="../Subsidiary/Index?userId=@Model.UserId">Administrar Sucursales <i class="fa fa-eye"></i></a>
                </small>
            </div>
        </div>
    </div>

</div>
<hr/>
<div class="col-md-12">
    <a class="btn btn-outline-secondary btn-sm" href="../Home/Index"> <i class="fa fa-angle-left"></i> Volver</a>
</div>