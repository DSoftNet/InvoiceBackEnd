@model Invoice.Admin.Models.UserModel;

@{
    ViewData["Title"] = "Home";
}

<div class="card-group">
    @foreach (var user in Model.InputUsers)
    {
        <div class="card text-center">
            <div class="card-body">
                <i class="fa fa-user-circle fa-4x text-dark "></i>
                <h5 class="card-title">@user.Identification</h5>
                <p class="card-text">
                    <small class="text-muted">
                        @user.FirstName

                        @if (!string.IsNullOrEmpty(user.SecondName))
                        {
                            @user.SecondName
                        }

                        @user.FirstLastName

                        @if (!string.IsNullOrEmpty(user.SecondName))
                        {
                            @user.SecondLastName
                        }
                    </small>
                </p>
            </div>
            <div class="card-footer">
                <a class="btn btn-outline-secondary btn-sm"  href="../UserDetail/Index?userId=@user.Id&&firstName=@user.FirstName">Ir a detalles <i class="fa fa-angle-right"></i></a>
            </div>
        </div>
    }
